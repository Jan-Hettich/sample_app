<h1>All users</h1>

<div class="pagination_top"><%= will_paginate %></div>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, :size => 30 %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

<div class="pagination_bottom"><%= will_paginate %></div>