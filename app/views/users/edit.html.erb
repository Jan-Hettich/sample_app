<h1>Edit user</h1>
<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= render 'fields', :f => f %>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
<div class="gravatar">
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails"><br />change</a>
</div>